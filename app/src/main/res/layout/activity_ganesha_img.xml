<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GaneshaImgActivity">





    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/redbar"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ganesha Images"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </FrameLayout>


    <ImageView
        android:id="@+id/topbg"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/topbanner"
        android:layout_below="@id/top"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ecofriendly"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_below="@id/topbg"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ecofriendly"
        android:textColor="@color/white"
        android:text="Eco Friendly"
        android:gravity="bottom"
        android:paddingStart="28dp"
        android:paddingBottom="3dp"
        android:textSize="13dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regular"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/ecofriendly"
        android:layout_below="@+id/topbg"
        android:background="@drawable/regular"
        android:textColor="@color/white"
        android:text="Regular"
        android:gravity="bottom"
        android:paddingStart="39dp"
        android:paddingBottom="3dp"
        android:textSize="13dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customize"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_below="@id/ecofriendly"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/customize"
        android:textColor="@color/white"
        android:text="Customize"
        android:gravity="bottom"
        android:paddingStart="32dp"
        android:paddingBottom="3dp"
        android:textSize="13dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ShareApp"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_below="@id/regular"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/customize"
        android:background="@drawable/aksharganesha"
        android:text=" Akshar Ganesha"
        android:textColor="@color/white"
        android:gravity="bottom"
        android:paddingStart="16dp"
        android:paddingBottom="3dp"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbg"
        android:layout_above="@+id/bottombg"
        android:background="@drawable/bottombg" />



    <ImageView
        android:id="@+id/bottombg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/redbar"
        android:layout_alignParentBottom="true"
        android:src="@drawable/home"
        app:tint="@color/white" />



</RelativeLayout>
