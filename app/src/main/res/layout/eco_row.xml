<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Eco_image"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:src="@drawable/murtikar"
            android:scaleType="fitXY" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/downloadebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/baseline_download_24"
            android:padding="10dp"
            android:layout_below="@id/Eco_image" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/sharebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toEndOf="@+id/downloadebtn"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/baseline_share_24"
            android:padding="10dp"
            android:layout_below="@id/Eco_image" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
